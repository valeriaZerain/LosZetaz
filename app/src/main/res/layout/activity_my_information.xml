<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyInformationActivity"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/purple"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_homescreen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/home" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/my_profile"
            android:theme="@style/TextViewHead" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_menu"
        android:padding="20dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_client"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/plus"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/user_image"
                android:gravity="center"
                android:layout_margin="4dp">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/username"
                    android:theme="@style/TextInfoTitle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:theme="@style/TextViewDescription"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/email"
            android:theme="@style/TextInfoTitle"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_client"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:theme="@style/TextInfoDescription"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/user_email"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/phone_number"
            android:theme="@style/TextInfoTitle"
            app:layout_constraintTop_toBottomOf="@id/text_email"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:theme="@style/TextInfoDescription"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/user_phone"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/user_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/birthday"
            android:theme="@style/TextInfoTitle"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/text_phone"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/text_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthday"
            android:theme="@style/TextInfoDescription"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/user_birthday"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/user_ci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/identification_carnet"
            android:theme="@style/TextInfoTitle"
            app:layout_constraintTop_toBottomOf="@id/text_birthday"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/text_ci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identification_carnet"
            android:theme="@style/TextInfoDescription"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/user_ci"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/client_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="constraint_client,user_birthday,user_ci,text_birthday,text_ci"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:id="@+id/log_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:theme="@style/PostButton"
        android:backgroundTint="@color/black_transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>