<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    >


    <TextView
        android:id="@+id/club_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Taboo"
        style="@style/TextViewTitle"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/club_name"
        android:weightSum="2"
        >
        <ImageView
            android:id="@+id/img_club"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/logo_wave">
        </ImageView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/center_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3"
                />
            <ImageView
                android:id="@+id/img_likes"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/favorite_full"
                app:layout_constraintTop_toTopOf="@id/center_line"
                app:layout_constraintBottom_toBottomOf="@id/center_line"
                 app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:id="@+id/text_number_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                app:layout_constraintLeft_toRightOf="@id/img_likes"
                app:layout_constraintBottom_toBottomOf="@id/center_line"
                app:layout_constraintTop_toTopOf="@id/center_line"
                style="@style/TextViewTitle"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver mas..."
                app:layout_constraintTop_toBottomOf="@id/img_likes"
                app:layout_constraintLeft_toLeftOf="@id/img_likes"
                style="@style/TextViewDescription"
                android:layout_margin="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>